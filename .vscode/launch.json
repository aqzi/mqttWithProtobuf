{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Dotnet/Dotnet.Worker/bin/Debug/net8.0/Dotnet.Worker.dll",
            "cwd": "${workspaceFolder}/Dotnet/Dotnet.Worker",
            "stopAtEntry": false,
        },
        {
            "name": "debug web app",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/Nodejs/web-app",
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/Python/src/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/Python/.venv/bin/python" //adapt this to your virtual environment
        }
    ]
}